<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="cliente-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :direccion %>
    <%= text_input f, :direccion %>
    <%= error_tag f, :direccion %>
  
    <%= label f, :cif %>
    <%= text_input f, :cif %>
    <%= error_tag f, :cif %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
